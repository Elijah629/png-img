    "include": ["src/ts"],
    "compilerOptions": {
        "target": "ES2019",
        "outDir": "dist",
        "allowJs": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "sourceMap": true
    }
}
